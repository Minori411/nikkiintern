
<h4>Top News</h2>
<p class="listBox_result">
    <span>
        <%= @news.count %>
    </span>
    News is here.
</p>
<div class="row flexbox">
  <article class="col-8 flexbox" style="width:800px;">
  <% @news.each do |news| %>
    <%= link_to news_path(news.id) do %>
    <div class="row" style="margin:10px;">
        <div class="col2 s12 m5">
            <!-- card start -->
            <div class="card" style="display:flex;height: 280px;width: 380px; margin:0;">
                <div class="card-image" style="Width: 150px;">
                <%= image_tag news.image.to_s, height: '280', width: '150' %>
            </div>
            <div class="card-content">
            <%= news.created_at.strftime('%Y/%m/%d %H:%M') %>
            <span class="card-title"><%= news.title %></span>
            <div class="fromto">
            <h6>
            <div class="chip">
                Aエリア
            </div>
            <i class="fa-solid fa-xmark"></i>
            <div class="chip">
                Piping
            </div>
            <div class="flex-column">
            <i class="fa-solid fa-angles-down angle-down fa-xl"></i>
            </div>
            <div class="flexbox" style="width: 200px;margin-top: 15px;">
            <div class="chip">
                Bエリア
            </div>
            <i class="fa-solid fa-xmark x-mark-news"></i>
            <div class="chip">
                Mechanical
            </div>
            </div>
            </div>
            </div>
            </div>
            <!-- card end -->
        </div>
        </div>
    <% end %>
  <% end %>
  </article>
  <aside class="col-4">
    <%= form_with url: search_path,id: :search_news, method: :get, local: true do |f| %>
        <div class="row">
    <div class="col s12 m4" style="width:100%;width: 410px;height: 100%; height: 320px;">
      <div class="card-panel teal" style="width: 500px;width: 100%;height: 100%;background-color: white!important;border-radius: 8px;margin:0;border: 3px solid #d32f2f;">
      <p class="search-title">絞り込み検索</p>
          <div class="input-field col s12">
            <%= f.text_field :keyword, value: @keyword, :placeholder => "キーワード検索" %>
            <% f.submit "検索", id: 'search-submit' %>
          </div>
      <div class="area_search">
      <h5>Area</h5>
      </div>
      <div class="block">
      <%= f.check_box :area_name_a, id: :a_processarea, checked: params[:area_name_a] == "1", include_hidden: false %>
      <%= f.label :A_ProcessArea,{class: 'index'} %>
      <%= f.check_box :area_name_b, id: :b_utilityarea, checked: params[:area_name_b] == "2", include_hidden: false %>
      <%= f.label :B_UtilityArea,{class: 'index'} %>
      <%= f.check_box :area_name_c, id: :c_offsite, checked: params[:area_name_c] == "3", include_hidden: false %>
      <%= f.label :C_Offsite,{class: 'index'} %>
      </div>
      <div class="area_search">
      <h5>Section</h5>
      </div>
      <%= f.check_box :section_name_a, id: :civil, checked: params[:section_name_a] == "1" %>
      <%= f.label :Civil,{class: 'indexx'} %>
      <%= f.check_box :section_name_b,  id: :building, checked: params[:section_name_b] == "2" %>
      <%= f.label :Building,{class: 'indexx'} %>
      <%= f.check_box :section_name_c,  id: :mechanical, checked: params[:section_name_c] == "3" %>
      <%= f.label :Mechanical,{class: 'indexx'} %><br>
      <%= f.check_box :section_name_d,  id: :piping, checked: params[:section_name_d] == "4" %>
      <%= f.label :Piping,{class: 'indexx'} %>
      <%= f.check_box :section_name_e,  id: :erectrical, checked: params[:section_name_e] == "5" %>
      <%= f.label :Erectrical,{class: 'indexx'} %>
      </div>
    </div>
  </div>
        
    <% end %>
  </aside>
</div>
