<div class="boxbaseP30 post-articles">
<%=link_to "To News Summary", news_index_path, class: "newssummary" %>
    <div class="flexbox">
    <div class="flexbox column-img">
    <%= image_tag @news.image.to_s, class: "image_tag",height: '150', width: '150' %>
    <div class="flexbox chips-news">
    <div class="column-img", style= "flex-dirextion: column;">
    <div class="chip", style = "<%= event_nav_btn_style_area1(@news) %>">
    <%= @news.area.area_name %>
    </div>
    <i class="fa-solid fa-xmark"></i>
    <div class="chip", style = "<%= event_nav_btn_style_section1(@news) %>">
    <%= @news.section.section_name %>
    </div>
    <i class="fa-solid fa-xmark"></i>
    <div class="chip">
    <%= @news.user.name %>
    </div>
    </div>
  <i class="fa-solid fa-angles-right fa-2xl angle-right margin-angle">
  </i>
  <% @news_area_sections.each do |newsareasection| %>
  <div class="chip", style = "<%= event_nav_btn_style_area2(newsareasection) %>">
    <%= newsareasection.area.area_name %>
  </div>
  <i class="fa-solid fa-xmark x-mark"></i>
  <div class="chip", style = "<%= event_nav_btn_style_section2(newsareasection) %>" >
    <%= newsareasection.section.section_name %>
  </div>
  <% end %>  
  </div>
  <% if current_user.userstyle == 0 %>
  <div class="reads">READ:</div>
<% @news_reads.each do |newsreads| %>
  <div class="view-count">
  <div class="chip">
  <%= newsreads.user.name %>/<%= newsreads.user.email %>
  </div>
  </div>
<% end %>
<% end %>
    </div>
    <% if user_signed_in? && current_user.userstyle == 0 %>
        <div class="admin-icons">
        <%= link_to edit_news_path(@news.id) do %>
            <i class="fa-solid fa-pen-to-square fa-2xl"></i>
        <% end %>
        <%= link_to news_path(@news.id), method: :delete, data: { confirm: "【confirm】Do you want to delete？" } do %>
            <i class="fa-solid fa-trash fa-2xl"></i>
        <% end %>
        </div>
    <% end %>
    </div>
    <p><%= @news.created_at.strftime('%Y/%m/%d %H:%M') %></p>
    <h2><%= @news.title %></h3>
    <br>
    <p><%= @news.body %></p>
</div>