<div class="boxbaseP30 post-articles">
<% if current_user.userstyle == 0 %>
既読：
    <% @news_reads.each do |newsreads| %>
        <p class="view-count"><%= newsreads.user.name %></p>
    <% end %>
<% end %>
    <div class="flexbox">
    <div class="flexbox column-img">
    <%= image_tag @news.image.to_s, class: "image_tag",height: '150', width: '150' %>
    <div class="flexbox chips-news">
    <div class="chip">
    <%= @news.area.area_name %>/<%= @news.section.section_name %>
    </div>
  <i class="fa-solid fa-angles-right fa-1xl angle-right">
  </i>
  <% @news_area_sections.each do |newsareasection| %>
  <div class="chip">
    <%= newsareasection.area.area_name %>/<%= newsareasection.section.section_name %>
  </div>
  <% end %>
  </div>
    </div>
    <% if user_signed_in? && current_user.userstyle == 0 %>
        <div class="admin-icons">
        <%= link_to edit_news_path(@news.id) do %>
            <i class="fa-solid fa-pen-to-square fa-2xl"></i>
        <% end %>
        <%= link_to news_path(@news.id), method: :delete, data: { confirm: "【確認】削除しますか？" } do %>
            <i class="fa-solid fa-trash fa-2xl"></i>
        <% end %>
        </div>
    <% end %>
        <%=link_to "To News Summary", news_index_path, class: "newssummary" %>
    </div>
    <p><%= @news.created_at.strftime('%Y/%m/%d %H:%M') %></p>
    <h2><%= @news.title %></h3>
    <br>
    <p><%= @news.body %></p>
</div>