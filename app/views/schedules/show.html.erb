<% if current_user.userstyle == 0 %>
    <div class="reads">READ:</div>
    <% @schedule_reads.each do |schedulereads| %>
        <div class="view-count">
        <div class="chip">
        <%= schedulereads.user.name %>/<%= schedulereads.user.email %>
        </div>
        </div>
    <% end %>
<% end %>
    <p>Title</p>
    <%= @schedule.title %>

    <p>Address</p><br>
    <%= @schedule.area.area_name%>
    <%= @schedule.section.section_name %>
    <div class="angle-space">
        <i class="fa-solid fa-angles-down fa-2xl"></i>
    </div>
    <div class="areas-event">
        <% @schedule.schedule_area_sections.each do |schedule| %>
            <%= Area.find(schedule.area_id).area_name  %>
            <%= Section.find(schedule.section_id).section_name %>
        <% end %>
    </div>

    <div class="form-inline text-left">
    <p>start</p>
    <%= @schedule.start %>
    </div>
    <br>
    <div class="form-inline text-left"> 
    <p>end</p>
    <%= @schedule.end %>
    </div>
    <% if @schedule.allDay == true %>
    <p>All Day</p>
    <% end %>
    <div class="form-group">
        <p>description</p>
        <div class="form-control mb-3"><%= @schedule.description %></div>
    </div>
